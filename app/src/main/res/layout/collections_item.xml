<?xml version="1.0" encoding="utf-8"?>
<net.imoran.auto.music.widgets.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y115">
    <RelativeLayout
        android:id="@+id/collection_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x50">
        <FrameLayout
            android:id="@+id/collection_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/collection_animation"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/collection_id"
                android:layout_width="@dimen/x40"
                android:textSize="@dimen/x20"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:layout_centerVertical="true"
                android:textColor="#99ffffff"
                android:text="1"
                android:layout_height="wrap_content"
                />
        </FrameLayout>

        <ImageView
            android:id="@+id/collection_img"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@+id/collection_title"
            />

        <TextView
            android:id="@+id/collection_name"
            android:layout_width="@dimen/x300"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/y15"
            android:textSize="@dimen/x24"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/x44"
            android:textColor="#ffffff"
            android:text="古典音乐怎么用"
            android:layout_toRightOf="@+id/collection_img"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/collection_author"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x18"
            android:layout_below="@+id/collection_time"
            android:textSize="@dimen/x20"
            android:layout_marginLeft="@dimen/x44"
            android:text="06/07"
            android:layout_toRightOf="@+id/collection_img"
            android:textColor="#99ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/collection_time"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x20"
            android:layout_marginTop="@dimen/y15"
            android:text="06/07"
            android:layout_marginRight="@dimen/x20"
            android:textColor="#99ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/collection_qihao"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x18"
            android:layout_below="@+id/collection_time"
            android:textSize="@dimen/x20"
            android:text="06/07"
            android:layout_marginRight="@dimen/x20"
            android:textColor="#99ffffff"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="170px"
        android:layout_height="match_parent"
        android:background="#b50b0e"
        android:text="删除"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp" />
</net.imoran.auto.music.widgets.SwipeMenuLayout>