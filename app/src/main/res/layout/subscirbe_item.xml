<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y114"
    android:paddingLeft="@dimen/x40"
    android:paddingRight="@dimen/x40">
    <TextView
        android:id="@+id/subscribe_id"
        android:layout_width="wrap_content"
        android:textSize="@dimen/x20"
        android:layout_centerVertical="true"
        android:textColor="#99ffffff"
        android:text="1"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/subscirbe_pic"
        android:layout_toRightOf="@+id/subscribe_id"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x60"/>
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/subscribe_name"
        android:layout_width="@dimen/x300"
        android:textSize="@dimen/x24"
        android:layout_marginLeft="@dimen/x25"
        android:textColor="#ffffff"
        android:text="古典音乐怎么用"
        android:layout_toRightOf="@+id/subscirbe_pic"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/x20"
        android:id="@+id/subscribe_time"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:textSize="@dimen/x20"
        android:text="06/07"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/subscribe_qihao"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:layout_below="@+id/subscribe_time"
        android:textSize="@dimen/x20"
        android:text="06/07"
        android:visibility="visible"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />
</RelativeLayout>