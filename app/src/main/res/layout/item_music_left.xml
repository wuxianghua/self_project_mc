<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y140"
    android:layout_centerInParent="true"
    android:background="@drawable/selector_left_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iconUnselected"
        android:layout_width="@dimen/x55"
        android:layout_height="@dimen/y55"
        android:src="@drawable/ic_music_leftbar_musicplay_normal" />

    <TextView
        android:id="@+id/nameUnselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y9"
        android:text="网络音乐"
        android:textColor="#99ffffff"
        android:textSize="20px" />

</LinearLayout>