<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llPhoneConnectState"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:background="@drawable/bg_music_musicplay">

    <ImageView
        android:layout_width="@dimen/x140"
        android:layout_height="@dimen/y160"
        android:layout_marginLeft="@dimen/x330"
        android:layout_marginTop="@dimen/y260"
        android:src="@drawable/ic_music_bluetooth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x4"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="未连接手机蓝牙，请先连接手机！"
        android:textColor="#99ffffff"
        android:textSize="24px" />


    <TextView
        android:id="@+id/connectedPhone"
        android:layout_width="@dimen/x144"
        android:layout_height="@dimen/y54"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y60"
        android:background="@drawable/shape_button_turn_page_selected"
        android:gravity="center"
        android:singleLine="true"
        android:text="连接蓝牙"
        android:textColor="@color/color_turn_page_selected"
        android:textSize="@dimen/text_13sp" />
</LinearLayout>