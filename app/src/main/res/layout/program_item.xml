<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y114">
    <FrameLayout
        android:id="@+id/subscribe_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/subscribe_animation"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subscribe_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            android:text="1"
            android:textColor="#99ffffff"
            android:textSize="@dimen/x20"
            android:visibility="visible" />
    </FrameLayout>
    <TextView
        android:id="@+id/subscribe_name"
        android:layout_width="@dimen/x500"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/y15"
        android:textSize="@dimen/x24"
        android:layout_marginLeft="@dimen/x50"
        android:textColor="#ffffff"
        android:text="古典音乐怎么用"
        android:layout_toRightOf="@+id/subscribe_title"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/subscribe_author"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:layout_below="@+id/subscribe_time"
        android:textSize="@dimen/x20"
        android:layout_marginLeft="@dimen/x50"
        android:text="06/07"
        android:layout_toRightOf="@+id/subscribe_title"
        android:textColor="#4dffffff"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/subscribe_time"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:textSize="@dimen/x20"
        android:layout_marginTop="@dimen/y15"
        android:text="06/07"
        android:layout_marginRight="@dimen/x50"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/subscribe_qihao"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:layout_below="@+id/subscribe_time"
        android:textSize="@dimen/x20"
        android:text="06/07"
        android:layout_marginRight="@dimen/x50"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />
</RelativeLayout>