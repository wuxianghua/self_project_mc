<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_musicplay">
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/x74"
        android:padding="@dimen/x20"
        android:layout_height="@dimen/x74"
        android:layout_marginTop="@dimen/x55"
        android:layout_marginLeft="@dimen/x64"
        android:src="@drawable/ic_music_onlinemusic_list_back_selector" />

    <ImageView
        android:id="@+id/iv_program_detail"
        android:layout_marginLeft="@dimen/x80"
        android:layout_width="@dimen/y160"
        android:layout_marginTop="@dimen/x30"
        android:layout_height="@dimen/y160"
        android:layout_below="@+id/back"/>
    <TextView
        android:id="@+id/tv_program_name"
        android:layout_toRightOf="@+id/iv_program_detail"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x30"
        android:layout_below="@+id/back"
        android:textSize="@dimen/x30"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="#ffffff"
        android:paddingRight="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_program_jianjie"
        android:layout_toRightOf="@+id/iv_program_detail"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:layout_below="@+id/tv_program_name"
        android:textSize="@dimen/x25"
        android:ellipsize="end"
        android:lines="2"
        android:paddingRight="@dimen/x30"
        android:textColor="#4dffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_program_time"
        android:layout_toRightOf="@+id/iv_program_detail"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:layout_below="@+id/tv_program_jianjie"
        android:textSize="@dimen/x25"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_program_number"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginTop="@dimen/x20"
        android:layout_below="@+id/iv_program_detail"
        android:textSize="@dimen/x25"
        android:textColor="#4dffffff"
        android:text="节目（20）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/ll_program_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@+id/iv_program_detail"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/tv_program_negative"
            android:src="@drawable/ic_music_special_downwardarrow"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y12"
            android:layout_marginRight="@dimen/x5"
            />
        <ImageView
            android:id="@+id/tv_program_positive"
            android:src="@drawable/ic_music_special_upwardarrow_pitchon"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y12"
            />
        <TextView
            android:id="@+id/tv_program_order"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x25"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/x50"
            android:text="正序"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y25"
        android:background="#1affffff"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_program_number"
        android:layout_height="@dimen/y1"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ls_program_detail"
        android:layout_marginTop="@dimen/x35"
        android:layout_below="@+id/tv_program_number"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginLeft="@dimen/x40"
        android:layout_height="@dimen/y456"/>
    <View
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y10"
        android:background="#1affffff"
        android:layout_width="match_parent"
        android:layout_below="@+id/ls_program_detail"
        android:layout_height="@dimen/y1"/>
    <RelativeLayout
        android:id="@+id/program_detail_control"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y125">
        <TextView
            android:id="@+id/lastaudio"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/y54"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x120"
            android:background="@drawable/selector_button_turn_page"
            android:gravity="center"
            android:text="上一页"
            android:textColor="@drawable/selector_button_turn_page_color"
            android:textSize="20px" />

        <TextView
            android:id="@+id/currentaudioPage"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/y54"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x120"
            android:gravity="center"
            android:text="1/3"
            android:textColor="#99ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/nextaudio"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/y54"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x120"
            android:layout_marginRight="@dimen/x114"
            android:background="@drawable/selector_button_turn_page"
            android:gravity="center"
            android:text="下一页"
            android:textColor="@drawable/selector_button_turn_page_color"
            android:textSize="20px" />
    </RelativeLayout>
</RelativeLayout>