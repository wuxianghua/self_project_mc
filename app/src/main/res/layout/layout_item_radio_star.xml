<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x160"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/x50"
    android:background="@drawable/selector_radio_star_num"
    android:gravity="center"
    tools:showIn="@layout/fragment_music_radio">

    <ImageView
        android:id="@+id/radioLike"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/y44"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_music_radio_list_default" />

    <TextView
        android:id="@+id/radioNum"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x8"
        android:layout_toRightOf="@+id/radioLike"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="1"
        android:textColor="#99ffffff"
        android:textSize="30px" />
</RelativeLayout>