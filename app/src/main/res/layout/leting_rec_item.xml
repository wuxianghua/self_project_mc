<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y110"
    android:layout_marginLeft="@dimen/x20"
    android:paddingRight="@dimen/x40">
    <TextView
        android:id="@+id/subscribe_id"
        android:layout_width="@dimen/x30"
        android:textSize="@dimen/x20"
        android:layout_centerVertical="true"
        android:textColor="#99ffffff"
        android:text="1"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/subscirbe_pic"
        android:layout_toRightOf="@+id/subscribe_id"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x40"/>
    <TextView
        android:id="@+id/leting_category"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:text="推荐"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="@dimen/x20"
        android:layout_toRightOf="@+id/subscribe_id"
        android:layout_marginLeft="@dimen/x40"
        android:background="#b3000000"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/subscribe_name"
        android:layout_width="@dimen/x350"
        android:textSize="@dimen/x24"
        android:layout_marginLeft="@dimen/x20"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:text="古典音乐怎么用"
        android:layout_toRightOf="@+id/subscirbe_pic"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_musiclibrary_leting_newskinds_play"/>
</RelativeLayout>